<div class="row">
  <div class="col-xs-12">
    <%= form_for(@custom_address, url: checkout_payment_method_path, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <label for="exampleInputEmail1">First name</label>
        <%= f.text_field :first_name, class: "form-control",style: "width:60%", placeholder: "Enter first name", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Last name</label>
        <%= f.text_field :last_name, class: "form-control",style: "width:60%", placeholder: "Enter last name", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Country</label>
        <%= f.text_field :country, class: "form-control",style: "width:60%", placeholder: "Enter Country", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">City</label>
        <%= f.text_field :city, class: "form-control",style: "width:60%", placeholder: "Enter City", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Street</label>
        <%= f.text_field :street, class: "form-control",style: "width:60%", placeholder: "Enter Street", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Post code</label>
        <%= f.text_field :post_code, class: "form-control",style: "width:60%", placeholder: "Enter Post code", autofocus: true %>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Phone</label>
        <%= f.text_field :phone, class: "form-control",style: "width:60%", placeholder: "Enter Phone", autofocus: true %>
      </div>
      <div class="form-group">
        <%= hidden_field_tag 'custom_address_form', "true"  %>
        <%= f.submit class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>
  </div>
</div>