<h1 style="padding-bottom: 20px;">Add new shipping address</h1>

<% if @address.errors.any? %>
  <% @address.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
  <% end %>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@address, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :first_name %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :last_name %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :last_name, rows: 10, class: "form-control", placeholder: "Enter last name" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :country %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :country, class: "form-control", placeholder: "Enter country" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :city %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :city, class: "form-control", placeholder: "Enter city" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :street %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :street, class: "form-control", placeholder: "Enter street" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :post_code %>
        </div>
        <div class="col-sm-2">
          <%= f.text_field :post_code, class: "form-control",placeholder: "Enter post code"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :phone %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :phone, class: "form-control", placeholder: "Enter phone number" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>