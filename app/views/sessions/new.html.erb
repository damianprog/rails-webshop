<h1 align="center">Login to Rails Eshop</h1>

<% if flash[:fail] %>
  <div class="alert alert-danger" role="alert"><%= flash[:fail] %></div>
<% end %>

<div id="signup-container">
  <div class="row">
    <div class="col-xs-12">
      <%= form_for(:session, :html => {class: "form-horizontal", role: "form"},url: login_path) do |f| %>
        <div class="form-group">
          <div class="col-sm-2 control-label">
            <%= f.label :email %>
          </div>
          <div class="col-sm-4">
            <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter email" %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-2 control-label">
            <%= f.label :password %>
          </div>
          <div class="col-sm-4">
            <%= f.password_field :password, class: "form-control", autocomplete:false %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>